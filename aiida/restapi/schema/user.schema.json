{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "Schema for POST requests to /user",
    "type": "object",
    "properties": {
        "first_name": {
            "description": "First Name of the user",
            "type": "string"
        },
        "last_name": {
            "description": "Last Name of the user",
            "type": "string"
        },
        "institution": {
            "description": "Name of the institution",
            "type": "string"
        },
        "email": {
            "description": "Email Address of the User",
            "type": "string"
        }
    },
    "required": [
        "first_name",
        "last_name",
        "institution",
        "email"
    ]
}
